    "/transfer/{transaction_id}": {
      "get": {
        "summary": "Check Transfer Status",
        "description": "Checks the status of a transfer based on the provided transaction ID.\n",
        "tags": [
          "Transfert"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "transaction_id",
            "in": "path",
            "required": true,
            "description": "The transaction ID of the transfer to check.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status of the Transfer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 100
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "SUCCESS",
                        "PENDING",
                        "FAILED"
                      ]
                    },
                    "merchant_transaction_id": {
                      "type": "string",
                      "description": "Merchant's transaction ID.",
                      "example": "154MM584KKKK766OO10PPKPOO"
                    },
                    "transaction_id": {
                      "type": "string",
                      "description": "The unique ID of the transfer transaction.",
                      "example": "e21ff257-3b97-4360-9d6d-a232a77081fa"
                    },
                    "amount": {
                      "type": "string",
                      "description": "The amount involved in the transaction.",
                      "example": "200"
                    },
                    "fee_amount": {
                      "type": "string",
                      "description": "The fee applied to the transaction.",
                      "example": "0"
                    },
                    "phone_number": {
                      "type": "string",
                      "description": "The client's phone number for the transfer.",
                      "example": "+2210707200200"
                    },
                    "currency": {
                      "type": "string",
                      "description": "The currency used for the transaction.",
                      "example": "XOF"
                    },
                    "user": {
                      "type": "string",
                      "nullable": true,
                      "description": "Information about the user, if available."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid Transaction ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 400
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "BAD_REQUEST"
                      ]
                    },
                    "description": {
                      "type": "string",
                      "description": "Error details about the bad request.",
                      "example": "Invalid transaction ID."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Transaction ID Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 404
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "NOT_FOUND"
                      ]
                    },
                    "description": {
                      "type": "string",
                      "description": "Message indicating that the transaction ID was not found.",
                      "example": "Not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error - Unexpected Issue",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
