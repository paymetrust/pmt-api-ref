{
  "openapi": "3.0.0",
  "info": {
    "title": "PAYMETRUST API",
    "version": "1.0.0",
    "description": "API For Payment & Transfer with PAYMETRUST API"
  },
  "servers": [
    {
      "url": "https://api.sandbox.paymetrust.net/v1",
      "description": "Sandbox environment"
    },
    {
      "url": "https://api.paymetrust.net/v1",
      "description": "Production environment"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/oauth/login": {
      "post": {
        "summary": "User Authentication",
        "description": "Authenticates a user using API credentials.",
        "tags": [
          "Authentication"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "api_key": {
                    "type": "string"
                  },
                  "api_password": {
                    "type": "string"
                  }
                },
                "required": [
                  "api_key",
                  "api_password"
                ]
              },
              "example": {
                "api_key": "*********",
                "api_password": "*************"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "status": {
                      "type": "string"
                    },
                    "access_token": {
                      "type": "string"
                    },
                    "token_type": {
                      "type": "string"
                    },
                    "expires_in": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "code": 200,
                  "status": "OK",
                  "access_token": "******",
                  "token_type": "bearer",
                  "expires_in": 86400
                }
              }
            }
          },
          "401": {
            "description": "Failure - Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "status": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "code": 1005,
                    "status": "INVALID_CREDENTIALS",
                    "description": "The requested service needs credentials, but the ones provided were invalid."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/payment": {
