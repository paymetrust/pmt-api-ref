    "/payment/{payment_token}": {
      "get": {
        "summary": "Check Payment Status",
        "description": "Checks the status of a payment transaction using the transaction ID.",
        "tags": [
          "Payment"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "payment_token",
            "in": "path",
            "required": true,
            "description": "The ID of the transaction to check.",
            "schema": {
              "type": "string",
              "example": "e2244957e8eb4349853bd39b1539ba3a"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Payment status retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "status": {
                      "type": "string"
                    },
                    "transaction_id": {
                      "type": "string"
                    },
                    "payment_status": {
                      "type": "string"
                    },
                    "details": {
                      "type": "object"
                    }
                  }
                },
                "example": {
                  "code": 200,
                  "status": "OK",
                  "transaction_id": "e2244957e8eb4349853bd39b1539ba3a",
                  "payment_status": "COMPLETED",
                  "details": {
                    "message": "Transaction successful."
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid transaction ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "status": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "code": 400,
                  "status": "BAD_REQUEST",
                  "description": "Invalid transaction ID."
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Transaction ID does not exist",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer"
                    },
                    "status": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "code": 404,
                  "status": "NOT_FOUND",
                  "description": "Transaction ID not found."
                }
              }
            }
          }
        }
      }
    },
    "/transfer": {
      "post": {
        "summary": "Process Transfer",
        "description": "Initiates a transfer request. This endpoint supports multiple configurations based on country requirements.\n- For **Benin (BJ)**: Use MOOV_BJ or  MTN_BJ.\n- For **Burkina Faso (BF)**: Use OM_BF, MOOV_BF or WAVE_BF for payment_method.\n- For **CÃ´te d'Ivoire (CI)**: Use OM_CI, MOOV_CI, WAVE_CI or MTN_CI for payment_method.\n- For **Mali (ML)**: Use OM_ML or MOOV_ML.\n- For **Cameroon (CM)**: Use OM_CM or MTN_CM.\n- For **Guinea (GN)**: Use OM_GN or MTN_GN.\n- For **Senegal (SN)**: Use OM_SN, WAVE_SN, FREE_SN or EXPRESSO.\n- For **Togo (TG)**: Use MOOV_TG or TMONEY_TG.\n- For **Niger (NE)**: Use AIRTEL_NE.\n- For **RDC (CD)**: Use OM_CD, AIRTEL_CD, MPESA_CD or AFRICELL_CD.\n",
        "tags": [
          "Transfert"
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "type": "object",
                    "required": [
                      "currency",
                      "merchant_transaction_id",
                      "amount",
                      "client_phone_number",
                      "payment_method",
                      "reason"
                    ],
                    "properties": {
                      "currency": {
                        "type": "string",
